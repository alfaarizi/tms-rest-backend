{
    "name": "tms-elte/backend-core",
    "description": "Task Management System (TMS) / REST Backend",
    "keywords": [
        "tms",
        "yii2",
        "task management",
        "submission",
        "examination",
        "plagiarism detection",
        "automated evaluation",
        "Canvas LMS"
    ],
    "homepage": "https://gitlab.com/tms-elte/backend-core",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://gitlab.com/tms-elte/backend-core/-/issues",
        "source": "https://gitlab.com/tms-elte/backend-core"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4.0",
        "ext-zip": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "yiisoft/yii2": "~2.0.45",
        "yiisoft/yii2-bootstrap5": "~2.0.2",
        "yiisoft/yii2-httpclient": "^2.0.0",
        "yiisoft/yii2-symfonymailer": "~2.0.3",
        "yii2tech/spreadsheet": "^1.0",
        "yii2tech/csv-grid": "^1.0",
        "caseyamcl/guzzle_retry_middleware": "^2.8",
        "czproject/git-php": "^4.0.3",
        "docker-php/docker-php": "^2.0.0",
        "jane-php/open-api-runtime": "4.2",
        "symfony/serializer": "5.4.12",
        "neitanod/forceutf8": "^2.0",
        "omnilight/yii2-scheduling": "^1.1",
        "phpoffice/phpspreadsheet": "^1.24.0",
        "spatie/crawler": "^4.7.4",
        "symfony/yaml": "^5.4",
        "firebase/php-jwt": "^6.10"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.1.0",
        "yiisoft/yii2-gii": "~2.2.0",
        "yiisoft/yii2-faker": "~2.0.0",
        "codeception/codeception": "^5.0.0 || ^4.0",
        "codeception/lib-innerbrowser": "^4.0 || ^3.0 || ^1.1",
        "codeception/module-asserts": "^3.0 || ^1.1",
        "codeception/module-filesystem": "^3.0 || ^2.0 || ^1.1",
        "codeception/module-rest": "^1.3",
        "codeception/module-yii2": "^1.1",
        "codeception/specify": "^2.0",
        "codeception/verify": "^3.0 || ^2.2",
        "symfony/browser-kit": "^6.0 || >=2.7 <=4.2.4",
        "phpunit/php-code-coverage": "^9.2",
        "squizlabs/php_codesniffer": "^3.2",
        "marcocesarato/php-conventional-changelog": "^1.12.0",
        "light/yii2-swagger": "~3.0",
        "doctrine/annotations": "^2.0.2",
        "wikimedia/scoped-callback": "^4.0.0",
        "phpstan/phpstan": "^1.10"
    },
    "config": {
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "php-http/discovery": false
        }
    },
    "scripts": {
        "post-install-cmd": [
            "yii\\composer\\Installer::postInstall"
        ],
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject",
            "yii\\composer\\Installer::postInstall"
        ],
        "changelog": "conventional-changelog",
        "release": "conventional-changelog --commit",
        "release:patch": "conventional-changelog --patch --commit",
        "release:minor": "conventional-changelog --minor --commit",
        "release:major": "conventional-changelog --major --commit",
        "lint": "phpcs --report=full",
        "lint:fix": "phpcbf",
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "codecept run unit,api"
        ],
        "test:unit": [
            "Composer\\Config::disableProcessTimeout",
            "codecept run unit"
        ],
        "test:api": [
            "Composer\\Config::disableProcessTimeout",
            "codecept run api"
        ],
        "test:generate": [
            "Composer\\Config::disableProcessTimeout",
            "codecept build"
        ],
        "analyze:phpstan": [
            "Composer\\Config::disableProcessTimeout",
            "phpstan analyse --memory-limit 1G"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ]
        },
        "yii\\composer\\Installer::postInstall": {
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "version": "4.1.0"
}