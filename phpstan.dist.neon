parameters:
  level: 4
  paths:
    - behaviors
    - commands
    - components
    - controllers
    - exceptions
    - models
    - modules
    - rbac
    - resources
    - validators
    - tests
  excludePaths:
    analyse:
        - components\openapi\generators\OASchema.php
        - components\plagiarism\Moss.php
        - tests/_data
        - tests/_support
    analyseAndScan:
        - models/NeptunAuth.php
        - tests/_output
  bootstrapFiles:
    - vendor/yiisoft/yii2/Yii.php
  stubFiles:
    - stubs/BaseYii.stub
    - stubs/ConsoleApplication.stub
    - stubs/WebApplication.stub
  ignoreErrors:
    - '#.*yii.*#'